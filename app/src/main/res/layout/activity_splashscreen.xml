<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.irfan.hitmovieapp.view.activity.SplashscreenActivity">

    <ImageView
        android:layout_marginBottom="4dp"
        android:id="@+id/myimg_splash_logo"
        android:layout_centerInParent="true"
        android:src="@mipmap/img_bandung"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_below="@id/myimg_splash_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.irfan.hitmovieapp.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HITS"
            android:textColor="@color/textColorSecondary"
            android:textSize="24sp"
            app:font="@string/font_source_sans_reg"/>

        <com.example.irfan.hitmovieapp.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Movie"
            android:textColor="@color/textColorHeader"
            app:font="@string/font_source_sans_reg"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>
